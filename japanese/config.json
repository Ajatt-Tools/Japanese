    "discard_mode": "discard_extra",
    "html_style": "u_biq"
  },
  "furigana": {
    "skip_numbers": true,
    "prefer_literal_pronunciation": false,
    "reading_separator": ",",
    "blocklisted_words": "人",
    "mecab_only": "母,先生,弟,空,猫,お前,女性,体,男,首,女,彼,顔,お,木,頭,僕,行く,私",
