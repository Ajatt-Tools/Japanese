  "pitch_accent": {
    "lookup_shortcut": "Ctrl+8",
    "lookup_pitch_format": "svg",
    "output_hiragana": false,
    "kana_lookups": true,
    "skip_numbers": true,
    "reading_separator": ", ",
    "word_separator": "; ",
    "blocklisted_words": "は,と,た,ね,さ,いる,ましょ,び,たち,こと,へ,たい,が,ば,から,て,ん,に,や,で,ます,し,です,き,だ,も,私,する,か,よ,てる,う,お,ない,な,の,せる,そりゃ,あもう,め,げ",
